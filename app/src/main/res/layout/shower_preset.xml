<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="12dp"
    app:cardMaxElevation="0dp">

    <ImageView
        android:src="@drawable/bg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/presetThemeBackground"/>

    <LinearLayout
        android:id="@+id/presetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="16dp">

        <LinearLayout
            android:id="@+id/presetTextContainer"
            android:minWidth="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/rounded_border"
            android:layout_width="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning shower"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:id="@+id/tv_preset_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24Â°C"
                android:id="@+id/tv_preset_temp"
                android:drawableLeft="@drawable/scaled_temp_icon"
                android:drawablePadding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No temperature limit"
                android:id="@+id/tv_preset_maxTemp"
                android:drawableLeft="@drawable/scaled_maxtemp_icon"
                android:drawablePadding="5dp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100% flow"
                android:id="@+id/tv_preset_flowrate"
                android:drawableLeft="@drawable/scaled_flow_icon"
                android:drawablePadding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 minutes"
                android:id="@+id/tv_preset_timer"
                android:drawableLeft="@drawable/scaled_timer_icon"
                android:drawablePadding="5dp" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
