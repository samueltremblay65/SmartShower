<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="12dp"
    app:cardMaxElevation="0dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:src="@drawable/bg1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:id="@+id/presetThemeBackground"/>

    <LinearLayout
        android:id="@+id/presetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="6dp"
        android:paddingVertical="12dp">

        <LinearLayout
            android:id="@+id/presetTextContainer"
            android:minWidth="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/rounded_border"
            android:layout_width="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning shower"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:id="@+id/tv_preset_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24Â°C"
                android:id="@+id/tv_preset_temp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100% water flow"
                android:id="@+id/tv_preset_maxTemp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaulttext_preset_timelimit"
                android:id="@+id/tv_preset_flowrate" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>